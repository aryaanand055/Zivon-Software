<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">All Packages</h2>
    <a href="/packages/create" class="btn btn-success">Add New Package</a>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-hover shadow-sm rounded-3">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Amount (₹)</th>
          <th>Duration (days)</th>
          <th>Description</th>
          <th style="width: 180px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (packages.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center text-muted">No packages available.</td>
        </tr>
        <% } else { %>
        <% packages.forEach(pkg => { %>
        <tr>
          <td><%= pkg.name %></td>
          <td><%= pkg.amount %></td>
          <td><%= pkg.duration %></td>
          <td><%= pkg.description || '—' %></td>
          <td>
            <a href="/packages/view/<%= pkg._id %>" class="btn btn-sm btn-primary">View</a>
            <a href="/packages/edit/<%= pkg._id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="#" class="btn btn-sm btn-danger package-dlt-btn" id="<%= pkg._id %>">Delete</a>
          </td>
        </tr>
        <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
  const deleteBtn = document.querySelector('.package-dlt-btn');
  deleteBtn.addEventListener('click', function() {
    if (confirm('Are you sure you want to delete this package?')) {
      const packageId = this.id; // Get the package ID from the button's id attribute
      fetch(`/packages/delete/${packageId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => {
          if (response.ok) {
            alert('Package deleted successfully!');
            window.location.href = '/packages'; // Redirect to all packages page
          } else {
            alert(response.statusText);
          }
        })
    }
  });
</script>