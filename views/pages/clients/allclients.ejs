<section class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Members List</h2>
    <a href="/clients/add" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Add Client
    </a>
  </div>

  <% if (clients && clients.length > 0) { %>
  <div class="table-responsive shadow-sm rounded">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Member ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>DOB</th>
          <th>Medical History</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% clients.forEach(function(client) { %>
        <tr>
          <td><%= client.memberID %></td>
          <td><%= client.name %></td>
          <td><%- client.email %></td>
          <td><%= client.mobile %></td>
          <td><%= new Date(client.dob).toLocaleDateString('en-GB') %></td>
          <td><%= client.medicalHistory || "None" %></td>
          <td>
            <a href="/clients/view/<%= client.memberID %>" class="btn btn-sm btn-outline-info">View</a>
            <a href="/clients/edit/<%= client.memberID %>" class="btn btn-sm btn-outline-warning">Edit</a>
            <a href="/clients/subscribe/<%= client.memberID %>" class="btn btn-sm btn-outline-warning">Add package</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <% } else { %>
  <div class="alert alert-secondary text-center">
    No members found. <a href="/add-client">Add a new client</a>.
  </div>
  <% } %>
</section>