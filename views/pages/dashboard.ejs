<div class="container my-5">
  <h2 class="mb-4 fw-bold text-center text-primary">Studio Dashboard</h2>

  <div class="row row-cols-1 row-cols-md-4 g-4 mb-5 text-center">
    <div class="col">
      <div class="card shadow-sm border-primary">
        <div class="card-body">
          <h6 class="fw-semibold text-muted">Total Clients</h6>
          <h3 class="text-primary fw-bold"><%= stats.totalClients %></h3>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card shadow-sm border-success">
        <div class="card-body">
          <h6 class="fw-semibold text-muted">Active Subscriptions</h6>
          <h3 class="text-success fw-bold"><%= stats.activeSubscriptions %></h3>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card shadow-sm border-info">
        <div class="card-body">
          <h6 class="fw-semibold text-muted">Total Revenue</h6>
          <h3 class="text-info fw-bold">₹ <%= stats.totalRevenue %></h3>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card shadow-sm border-danger">
        <div class="card-body">
          <h6 class="fw-semibold text-muted">Pending Payments</h6>
          <h3 class="text-danger fw-bold">₹ <%= stats.pendingAmount %></h3>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="d-flex justify-content-center gap-3 mb-5">
    <a href="/clients/add" class="btn btn-outline-primary">
      <i class="bi bi-person-plus-fill me-1"></i> Add Client
    </a>
    <a href="/packages/new" class="btn btn-outline-success">
      <i class="bi bi-box-seam me-1"></i> Add Package
    </a>
    <a href="/clients" class="btn btn-outline-secondary">
      <i class="bi bi-people-fill me-1"></i> View Clients
    </a>
  </div>

  <!-- Recent Subscriptions Table -->
  <div class="card shadow rounded-4">
    <div class="card-body">
      <h5 class="fw-bold mb-4 text-primary">Recent Subscriptions</h5>
      <% if (recentSubscriptions.length === 0) { %>
      <div class="alert alert-info text-center">No recent subscriptions found.</div>
      <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Client</th>
              <th>Package</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Amount Paid</th>
              <th>Pending</th>
            </tr>
          </thead>
          <tbody>
            <% recentSubscriptions.forEach(sub => { %>
            <tr>
              <td><a href="/clients/view/<%= sub.clientId.memberID %>"><%= sub.clientId.name %></a></td>
              <td><%= sub.packageId.name %></td>
              <td><%= new Date(sub.startDate).toLocaleDateString() %></td>
              <td><%= new Date(sub.endDate).toLocaleDateString() %></td>
              <td>₹ <%= sub.amountPaid %></td>
              <td>₹ <%= sub.packageId.amount - sub.offerAmount - sub.amountPaid %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
  </div>
</div>